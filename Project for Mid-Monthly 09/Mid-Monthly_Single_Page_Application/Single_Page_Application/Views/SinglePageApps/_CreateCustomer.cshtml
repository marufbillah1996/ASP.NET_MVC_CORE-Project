@model Customer


<form id="f" name="f" data-db-type="customer" data-db-action="insert" data-controller-action="CreateCustomer">
     <div class="form-group row mb-1">
        <label asp-for="CustomersName" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-4">
            <input  type="text" asp-for="CustomersName" class="form-control form-control-sm">
            <span asp-validation-for="CustomersName" class="text-danger"></span>
        </div>
    </div>
     <div class="form-group row mb-1">
        <label asp-for="CustomerPhone" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-4">
            <input  type="text" asp-for="CustomerPhone" class="form-control form-control-sm">
            <span asp-validation-for="CustomerPhone" class="text-danger"></span>
        </div>
    </div>
    <div id="items">
        <div class="d-flex justify-content-between mb-1">
            <h3>Items</h3>
            <div><button type="button" class="btn btn-primary btn-sm" id="addItemForm"><i class="bi bi-plus"></i></button></div>
        </div> 
        @await Html.PartialAsync("_CreateItem", 
        null,
        new ViewDataDictionary(this.ViewData)
         )
    </div>
</form>
