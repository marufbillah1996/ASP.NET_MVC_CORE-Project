@model Author

@{
    ViewData["Title"] = "Create";
}

<form id="f" name="f" data-db-type="author" data-db-action="insert" data-controller-action="CreateAuthor">

    <div class="form-group row mb-1">
        <label asp-for="AuthorName" class="col-form-label col-3"></label>
        <div class="col-9">
            <input asp-for="AuthorName" class="form-control" />
            <span asp-validation-for="AuthorName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="AuthorAddress" class="control-label col-3"></label>
        <div class="col-9">
            <input asp-for="AuthorAddress" class="form-control" />
            <span asp-validation-for="AuthorAddress" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="Gender" class="control-label col-3"></label>
        <div class="col-9">
            <select asp-for="Gender" class="form-select form-select-sm" asp-items="Html.GetEnumSelectList<Gender>()">
                <option value="" selected>Select one</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>
</form>





