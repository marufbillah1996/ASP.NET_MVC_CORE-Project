@model BookInputModel
<form id="f" name="f" data-db-type="book" data-db-action="insert" data-controller-action="CreateBook">

    <div class="form-group row mb-1">
        <label asp-for="BookName" class="col-form-label col-2"></label>
        <div class="col-10">
            <input asp-for="BookName" class="form-control" />
            <span asp-validation-for="BookName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="Price" class="control-label col-2"></label>
        <div class="col-10">
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="Picture" class="control-label col-2"></label>
        <div class="col-10">
            <input type="file" asp-for="Picture" class="form-control col-2" />
            <span asp-validation-for="Picture" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="PublishDate" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-10">
            <input type="text"  asp-for="PublishDate" class="form-control form-control-sm date">
            <span asp-validation-for="PublishDate" class="text-danger"></span>
        </div>
    </div>
   <div class="form-group row mb-1">
        <label asp-for="GenreID" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-10">
            <select asp-for="GenreID" class="form-select form-select-sm" asp-items="@(new SelectList(ViewData["Genres"] as IEnumerable<Genre>, "GenreID", "GenreName"))">
                <option value="" selected>Select one</option>
            </select>
            <span asp-validation-for="GenreID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="PublisherID" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-10">
            <select asp-for="PublisherID" class="form-select form-select-sm" asp-items="@(new SelectList(ViewData["Publishers"] as IEnumerable<Publisher>, "PublisherID", "PublisherName"))">
                <option value="" selected>Select one</option>
            </select>
            <span asp-validation-for="PublisherID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="Available" class="control-label col-2"></label>
        <div class="col-10">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="Available" checked>
            </div>
            <span asp-validation-for="Available" class="text-danger"></span>
        </div>
    </div>
</form>
